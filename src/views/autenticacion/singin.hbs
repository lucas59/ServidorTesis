<link rel="stylesheet" href="/css/registrarse.css">
<div class="root">
    <form onsubmit="return validarRegistroUsuario();" method="POST" action="/signup" enctype="multipart/form-data" class="form-register">
        <div class="form-register__header">
            <ul class="progressbar">
                <li class="progressbar__option active">Identificación</li>
                <li class="progressbar__option">Información personal</li>
                <li class="progressbar__option">Finalizando</li>
            </ul>
            <h1 class="form-register__title">Registrate en TINE</h1>
        </div>
        <div class="form-register__body">
            <div class="step active" id="step-1">
                <div class="step__header">
                    <h2 class="step__title">Identificación</h2>
                </div>
                <div class="step__body">
                    <input name="username" type="text" placeholder="Nombre de usuario" class="step__input" required placeholder>
                    <input name="email" type="email" placeholder="Correo" class="step__input" placeholder required>
                    <input name="password" type="password" placeholder="Contraseña" class="step__input" required placeholder="">
                    <input name="password2" type="password" placeholder="Confirmar contraseña" class="step__input" required
                        placeholder>
                </div>
                <div class="tipo">
                    <input type="radio" name="tipo" value="empleado" checked>Empleado<br>
                    <input type="radio" name="tipo" value="empresa" >Empresa<br>
                </div>
                <div class="step__footer">
                    <button type="button" class="step__button step__button--next" data-to_step="2"
                        data-step="1">Siguiente</button>
                </div>
            </div>
            <div class="step" id="step-2">
                <div class="step__header">
                    <h2 class="step__title">Información personal</h2>
                </div>
                <div class="step__body">
                    <input name="documento" type="text" placeholder="Nro documento" class="step__input" placeholder required>
                    <input name="nombre" type="text" placeholder="Nombre" class="step__input" placeholder required>
                    <input id="inputApellido" name="apellido" type="text" placeholder="Apellido" class="step__input" required placeholder>
                    <input name="tel" type="tel" placeholder="Teléfono" class="step__input" placeholder required>
                    <textarea rows="4" cols="80" placeholder="Dirección" class="step__input" required></textarea>
                </div>
                <div class="step__footer">
                    <button type="button" class="step__button step__button--back" data-to_step="1"
                        data-step="2">Atras</button>
                    <button type="button" class="step__button step__button--next" data-to_step="3"
                        data-step="2">Siguiente</button>
                </div>
            </div>
            <div class="step" id="step-3">
                <div class="step__header">
                    <h2 class="step__title">Información personal</h2>
                </div>
                <div class="step__body">
                    <img id="fotoUsuario" class="fotoUsuario" src="img/user.jpg" />
                    <div class="contenedorFoto">
                        <input name="fotoPerfil" alt="asd" id="inputFoto" class="inputFoto" type="file" />
                    </div>
                </div>
                <div class="step__footer">
                    <button type="button" class="step__button step__button--back" data-to_step="2"
                        data-step="3">Atras</button>
                    <button type="submit" class="step__button">Registrarse</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/script" src="js/registrarse.js"></script>