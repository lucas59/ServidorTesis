<link rel="stylesheet" href="css/tabsRegistrosEmpresa.css">
<link rel="stylesheet" href="css/indicador.css">
<main>
    <input id="tab1" type="radio" name="tabs" checked>
    <label for="tab1">Tareas en proceso</label>

    <input id="tab2" type="radio" name="tabs">
    <label for="tab2">Entradas</label>

    <section id="content1">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th class="colUser" scope="col">Usuario</th>
                    <th scope="col">Tarea</th>
                    <th scope="col">Fecha - Hora</th>
                    <th scope="col">Ubicaci√≥n</th>
                </tr>
            </thead>
            <tbody>
                {{#if tareas}}
                {{#each tareas}} <tr>
                    <th class="columnaUsuario" scope="row">
                        {{#if fotoPerfil}}

                        <img style="width: 70px" class="rounded-circle userTarea"
                            src="http://localhost:4005/img/perfiles/{{fotoPerfil}}">
                        {{else}}

                        <img style="width: 70px" class="rounded-circle userTarea"
                            src="http://localhost:4005/img/user.jpg">

                        {{/if}}
                        {{nombre}} {{apellido}}
                    </th>
                    <td class="columnaTarea">
                        {{titulo}}
                    </td>
                    <td class="columnaTiempo">
                        {{#if inicio}}
                        {{dateFormat inicio "d/MM/YY, h:mm:ss a"}}
                        {{else}}
                        {{#if fin}}
                        {{ fin}}
                        {{/if}}
                        {{/if}}
                    </td>
                    <td class="columnaUbicacion"> <button
                            onclick="abrirMapa({{latitud_ini}},{{longitud_fin}},{{latitud_fin}},{{longitud_fin}})"
                            class="btn btn-secondary"><i class="material-icons">my_location</i></button> </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </section>

    <section id="content2">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th class="colUser" scope="col">Usuario</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Captura</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#if asistencias}}

                {{#each asistencias}}
                <tr>
                    <th class="columnaUsuario" scope="row">
                        {{#if fotoPerfil}}

                        <img style="width: 70px" class="rounded-circle userTarea"
                            src="http://localhost:4005/img/perfiles/{{fotoPerfil}}">
                        {{else}}

                        <img style="width: 70px" class="rounded-circle userTarea"
                            src="http://localhost:4005/img/user.jpg">

                        {{/if}}
                        <p>{{nombre}} {{apellido}}</p>
                    </th>
                    <td class="columnaTiempo">
                        {{dateFormat fecha "d/MM/YY"}}
                    </td>

                    <td class="columnaTiempo">
                        {{dateFormat fecha "h:mm:ss a"}}
                    </td>
                    <td class="columnaCaptura">
                        <button id="captura" onclick="mostrarCaptura(this)" value="{{foto}}"><i
                                class="material-icons">photo_camera</i></button>
                    </td>
                    <td class="columnaTipo">

                        {{#ifCond tipo "===" 0}}
                        <div class="indicadorRojo bg-danger"></div>
                        {{/ifCond}}
                        {{#ifCond tipo "===" 1}}
                        <div class="indicadorVerde bg-success"></div>
                        {{/ifCond}}
                    </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </section>
</main>


<div id="modalUbicacion" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Lugar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="mapid"></div>
            </div>
        </div>
    </div>
</div>


<div id="modalCaptura" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Captura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="imgCaptura" src="" alt="">
            </div>
        </div>
    </div>
</div>



<script src="js/registrosEmpresas.js"></script>