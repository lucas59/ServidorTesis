<div class="container -p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{links.title}}" class="form-control" name="titulo" placeholder="titulo" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{links.url}}" name="url" class="form-control" placeholder="URL" required>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" id="" class="form-control" placeholder="Descripcion" rows="10"
                                required>{{links.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Modificar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>