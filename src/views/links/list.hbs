<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="cal-md-3">
            <div class="card text-center p-4 m-4">
                <a href="{{url}}" target="_blank">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                </a>
                <p class="m-2">{{descripcion}}</p>
                <p>{{timeago created_at}}</p>
                <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
                <a href="/links/editar/{{id}}" class="btn btn-secondary">Edit Link</a>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card cardbody text-center">
                    <p>No hay links creados aun</p>
                    <a href="/links/add">Crea Uno</a>
                </div>
            </div> 
        {{/each}}
    </div>
</div>