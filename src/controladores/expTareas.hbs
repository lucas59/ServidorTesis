<section id="content1">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th class="colUser" scope="col">Documento</th>
                <th scope="col">Tarea</th>
                <th scope="col">Inicio</th>
                <th>Fin</th>
            </tr>
        </thead>
        <tbody>
            {{#if tareas}}

            {{#each tareas}} <tr>
                <th class="columnaUsuario" scope="row">
                    {{Empleado}}
                </th>
                <td class="columnaTarea">
                    {{titulo}}
                </td>
                <td class="columnaTiempo">
                    {{ inicio}}
                </td>
                <td class="columnaTiempo">
                    {{fin}}
                </td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</section>